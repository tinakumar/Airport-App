
  <div class="container">
    <!-- Example row of columns -->
    <div class="row">
      <div class="span12">
        <h1 class="page-header">Today's Flight Schedule</h1>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Flight #</th>
              <th>From</th>
              <th>Departs</th>
              <th>To</th>
              <th>Arrives</th>
              <th>Miles</th>
              <th>Duration</th>
              <th>Seats</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @flights.each do |flight| %>
              <tr>
                <td><%= flight.flight_num %></td>
                <td><%= flight.departure_airport.code %></td>
                <td><%= flight.departs_at.strftime "%1:%M %p" %></td>
                <td><%= flight.arrival_airport.code %></td>
                <td><%= flight.arrives_at.strftime "%1:%M %p" %></td>
                <td><%= flight.miles %></td>
                <td><%= flight.duration_in_minutes %> minutes</td>
                <td><%= flight.seats %></td>
                <td>
                    <!--<a href="/reservations/new?flight_id=5" class="btn btn-success">Book Now</a>-->
                    <%= link_to "Book Now", new_reservation_url({ flight_id: 5 }), class: 'btn btn-success' %>
                </td>
              </tr>
            <% end %>

          </tbody>
        </table>
      </div>
    </div>

    <hr>
